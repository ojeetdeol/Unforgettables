<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:translationY="300px"

        android:fontFamily="@font/courier_prime_bold_italic"
        android:text = "Practice Mode"
        android:textSize="45px"

        android:onClick="practiceMode"

        android:id = "@+id/view_items"
        />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:translationY="800px"

        android:onClick="timedMode"

        android:fontFamily="@font/courier_prime_bold_italic"
        android:textSize="45px"
        android:text = "Timed Mode"

        />

</RelativeLayout>


